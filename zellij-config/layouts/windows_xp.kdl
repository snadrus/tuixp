layout {
    // Default tab shows only children; we'll draw our own taskbar row
    default_tab_template {
        children
    }

    // Main tab
    tab name="Workspace" split_direction="vertical" {
        // Arrange main content with a bottom row that mimics a taskbar
        pane // main working area
        // Bottom row: unified taskbar with Start and >_ buttons and counters
        pane split_direction="horizontal" size=3 {
            pane borderless=true {
                command "/bin/bash" {
                    args "-lc" "zellij-config/taskbar_launcher.sh"
                }
            }
        }
    }
}
